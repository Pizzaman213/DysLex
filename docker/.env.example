# DysLex AI Environment Variables

# Development mode â€” set to false for production (enforces strict security)
DEV_MODE=true

# Database
DATABASE_URL=postgresql+asyncpg://dyslex:dyslex@localhost:5432/dyslex
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# Redis (for snapshot storage)
REDIS_URL=redis://localhost:6379/0
SNAPSHOT_TTL_HOURS=24

# NVIDIA NIM API (required for Nemotron and MagpieTTS)
NVIDIA_NIM_API_KEY=your-api-key-here
NVIDIA_NIM_LLM_URL=https://integrate.api.nvidia.com/v1
NVIDIA_NIM_VOICE_URL=https://integrate.api.nvidia.com/v1
NVIDIA_NIM_LLM_MODEL=nvidia/nemotron-mini-4b-instruct

# Transcription (local faster-whisper for desktop; browser uses Web Speech API)
# Start with: docker compose --profile desktop up
TRANSCRIPTION_URL=http://localhost:8786/v1

# JWT Authentication (must be 32+ chars when DEV_MODE=false)
JWT_SECRET_KEY=change-this-to-a-secure-random-string

# Rate Limiting (per user per minute)
RATE_LIMIT_LLM=10
RATE_LIMIT_VOICE=20

# Correction Routing
CONFIDENCE_THRESHOLD=0.85

# TTS Audio Storage
TTS_AUDIO_DIR=storage/audio
TTS_AUDIO_BASE_URL=/audio
TTS_CACHE_TTL=3600
TTS_CLEANUP_ENABLED=true

# File Uploads
MAX_UPLOAD_SIZE_MB=25

# Logging
LOG_LEVEL=info

# Frontend
VITE_API_URL=http://localhost:8000
